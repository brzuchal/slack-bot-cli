{
  "name": "brzuchal/slack-bot-cli",
  "description": "PHP 8.4 Slack Bot CLI application with Symfony Console",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "brzuchal"
    }
  ],
  "require": {
    "php": ">=8.4",
    "symfony/console": "^7.0",
    "symfony/dotenv": "^7.0",
    "slack/slack-sdk-php": "^3.0",
    "guzzlehttp/guzzle": "^7.0",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.10",
    "php-cs-fixer/php-cs-fixer": "^3.50"
  },
  "autoload": {
    "psr-4": {
      "SlackBot\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SlackBot\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "start": "php bin/slack-bot",
    "test": "phpunit",
    "phpstan": "phpstan analyse src",
    "fix": "php-cs-fixer fix src"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}